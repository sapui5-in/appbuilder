<!--                   visible="{= ${msModel>/type} === 'View' ? true : false}"/>-->
<!--            <ComboBox items="{msModel>/viewTypes}" width="100%" selectedKey="{msModel>/viewType}"-->
<!--                      visible="{= ${msModel>/type} === 'View' ? true : false}">-->
<!--                <core:Item text="{msModel>text}" key="{msModel>key}"/>-->
<!--            </ComboBox>-->
            <Label text="Root Control" design="Bold" class="sapUiTinyMarginTop"/>
            <ComboBox items="{ path: 'msModel>/controlList' }"
                      selectedKey="{msModel>/rootControl}"
                      width="100%" selectionChange="onSelectionChangeRootControl">
                <core:Item key="{msModel>key}" text="{msModel>text}"/>
            </ComboBox>
        </VBox>
    </VBox>
</core:FragmentDefinition>