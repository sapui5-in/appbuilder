<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <VBox class="sapUiMediumMarginBottom rightSidebarBlock">
        <Toolbar>
            <Title text="UPDATE BLOCK" class="rightSidebarBlockTitle"/>
        </Toolbar>
        <VBox class="sapUiSmallMargin">
            <Label text="{msModel>/type} Name" design="Bold"/>
            <Input required="true" value="{msModel>/name}" change="onChangeBlockName"/>
